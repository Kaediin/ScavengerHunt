<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rel_layout_dialog_title_hun"
    android:padding="20dp">

    <EditText
        android:id="@+id/edit_text_hunt_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Title hunt"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rel_layout_private"
        android:layout_below="@+id/edit_text_hunt_title"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_private"
            android:text="Private: "
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        </TextView>

        <CheckBox
            android:id="@+id/checkbox_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/text_private"
            android:layout_marginTop="8dp">
        </CheckBox>

    </RelativeLayout>


    <Button
        android:layout_below="@+id/rel_layout_private"
        android:id="@+id/button_save_hunt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_hunt_button"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>