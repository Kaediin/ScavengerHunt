<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rel_layout_dialog_title_hun"
    android:padding="20dp">

    <EditText
        android:id="@+id/edit_text_hunt_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Title hunt"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_below="@+id/edit_text_hunt_title"
        android:id="@+id/button_save_hunt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_hunt_button"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>